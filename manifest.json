{
    "background": {
        "scripts": ["main.js"]
    },
    "browser_action": {
        "default_icon": {},
        "default_title": "Import CSV"
    },
    "content_scripts": [
        {
            "matches": ["*://mint.intuit.com/*"],
	    "css": ["importer.css"],
            "js": ["importer.js"]
        }
    ],
    "description": "Firefox extension with useful tools for Mint",
    "homepage_url": "https://github.com/hvmptydvmpty/spearmint",
    "manifest_version": 2,
    "name": "Spearmint",
    "permissions": ["activeTab", "clipboardWrite", "notifications", "webNavigation"],
    "version": "0.1.0"
}
